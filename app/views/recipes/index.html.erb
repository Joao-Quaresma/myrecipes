<!DOCTYPE html>
<html>
  <head>
    <title></title>
  </head>
  <body>
  	<%= render 'shared/page_title', title:"Showing all Recipes" %>
    <% @recipes.each do |recipe| %>
      <div class="row">
        <div class="col-md-2">
          <section class="chef_info center">
          	<%= gravatar_for(recipe.chef, size: 120) %>
          </section>
        </div>
        <div class="col-md-8 well">
          <h4><%= link_to recipe.name, recipe %></h4>
          <p><%= truncate(recipe.description, length: 150) %></p>
          <span class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at) %></small></span>
        </div>
      </div>
    <% end %>
  </body>
</html>