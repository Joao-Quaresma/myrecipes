<!DOCTYPE html>
<html>
  <head>
    <title></title>
  </head>
  <body>
    <%= render 'shared/page_title', title: "#{@chef.chefname}'s Profile" %>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <section class="chef-info center">
          <%= gravatar_for(@chef, size: 150) %>
          <h4 class="align-center"><%= @chef.chefname %>'s recipes</h4>
        </section>
      </div>
    </div>
    <div class="center">
      <%= will_paginate @chef_recipes %>
    </div>
    <%= render 'recipes/recipe', obj: @chef_recipes %>
    <div class="center">
      <%= will_paginate @chef_recipes %>
    </div>
  </body>
</html>